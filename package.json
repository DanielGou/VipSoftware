{
  "name": "vipsoftware",
  "version": "1.0.9",
  "main": "src/main.js",
  "description": "project by VipSoccerpro",
  "author": "Daniel Goulart",
  "scripts": {
    "start": "electron .",
    "publish": "build --win --linux --icon=assets/icon.ico -p always",
    "pack": "electron-builder --win --icon=assets/icon.ico --publish never"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^4.3.5",
    "prebuild": "^10.0.1"
  },
  "build": {
    "appId": "com.github.DanielGou.VipSoftware",
    "publish": [
      {
        "provider": "github",
        "owner": "DanielGou",
        "repo": "VipSoftware"
      }
    ],
    "win": {
      "target": "nsis"
      
    }, 
    "linux":{
      "target": "AppImage"
    }
  }
}
