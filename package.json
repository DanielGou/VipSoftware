{
  "name": "vipsoftware",
  "version": "2.0.0",
  "main": "src/main.js",
  "description": "project by VipSoccerpro",
  "author": "Daniel Goulart",
  "scripts": {
    "start": "electron .",
    "publish": "build --win --linux  -p always",
    "pack": "electron-builder --win --publish never"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^4.3.5",
    "prebuild": "^10.0.1"
  },
  "build": {
    "appId": "com.github.DanielGou.VipSoftware",
    "publish": [
      {
        "provider": "github",
        "owner": "DanielGou",
        "repo": "VipSoftware"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
