{
  "name": "vipsoftware",
  "version": "1.0.1",
  "main": "src/main.js",
  "description": "project by VipSoccerpro",
  "author": "Daniel Goulart",
  "scripts": {
    "start": "electron .",
    "publish": "build -p always",
    "pack": "electron-builder build --win --publish never"
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^20.44.4"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^4.3.5"
  },
  "build": {
    "appId": "com.github.DanielGou.VipSoftware",
    "publish": [
      {
        "provider": "github",
        "owner": "DanielGou",
        "repo": "VipSoftware"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../assets/icon.ico"
    },
    "linux": {
      "category": "your.app.category.type",
      "target": [
        "AppImage"
      ]
    }
  }
}
